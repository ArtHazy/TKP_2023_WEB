generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @map("_id")
  email    String  @unique
  name     String?
  password String
  Room     Room?
  Quizzes  Quiz[]
}

model Room {
  userId String @id @map("_id")
  User   User   @relation(fields: [userId], references: [id])
  quiz   Quiz
  quizId String @db.ObjectId
}

type Quiz {
  title     String
  Questions Question[]
  userId    String?
}

type Question {
  text      String
  isCorrect Boolean
}
